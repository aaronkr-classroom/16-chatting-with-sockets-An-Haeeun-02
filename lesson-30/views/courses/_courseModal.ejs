<!-- views/courses/_courseModal.ejs -->
<button
  id="modal-button"
  type="button"
  class="btn btn-primary"
  data-toggle="modal"
  data-target="#myModal"
>
  Latest Courses
</button>

<!-- Courses Modal -->
<div
  id="myModal"
  class="modal fade"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Latest Courses</h4>
        <button
          type="button"
          class="close dismiss-modal"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"></div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-default dismiss-modal"
          data-dismiss="modal"
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>
